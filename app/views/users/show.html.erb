<div class="container">
  <div class="column is-6 is-offset-3"><div class="box has-background-white-ter">
    <article class="media">
      <div class="media-content">
        <div class="content">
          <h5><%= @user.fullname %></h5>
          <p><small>handle: <%= @user.handle %></small><br>
          <i><small>email: <%= @user.email %></small></i></p>
        </div>
      </div>
    </article><br>
    <p>Recipes created by <%= @user.handle %>:
      <ul>
        <% @user.recipes.each do |recipe| %>
          <li><%= link_to recipe.title, recipe_path(recipe) %></li>
      <% end %>
      </ul>
    </p>
    <br>
    <%= render 'footer' %>
  </div>
</div>

