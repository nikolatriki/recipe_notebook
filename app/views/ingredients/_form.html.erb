<div class="container">
  <div class="column is-6 is-offset-3">
    <div class="content is-size-6">
      <h5><%= heading %></h5>
      <% if ingredient.errors.any? %>
        <div id="error_explanation">
          <article class="message is-danger">
            <h2>
              <%= pluralize(ingredient.errors.count, "error") %> prohibited this ingredient from being saved:
            </h2>
            <ul>
              <% ingredient.errors.full_messages.each do |message|%>
                <li><%= message %></li>
              <% end %>
            </ul>
          </article>
        </div>
      <% end %>
      <%= form_with model: [recipe, ingredient], local: true do |form|%>
        <div class="field">
          <p class="control">
            <%= form.text_field :substance, class: "input", placeholder: 'substance'%>
          </p>
        </div>
        <div class="field is-grouped">
          <div class="control">
              <%= form.submit class: "button is-light" %>
          </div>
        </div>
      <% end %>
        <div class="control">
            <%= link_to 'Cancel', recipe_path(recipe), class: "button is-white" %>
        </div>
    </div>
  </div>
</div>
