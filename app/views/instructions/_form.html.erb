<div class="container">
  <div class="column is-6 is-offset-3"><div class="box has-background-white-ter">
    <div class="content is-size-6">
      <h5><%= heading %></h5>
      <% if instruction.errors.any? %>
        <div id="error_explanation">
          <article class="message is-danger">
            <h2>
              <%= pluralize(instruction.errors.count, "error") %> prohibited this instruction from being saved:
            </h2>
            <ul>
              <% instruction.errors.full_messages.each do |message|%>
                <li><%= message %></li>
              <% end %>
            </ul>
          </article>
        </div>
      <% end %>
      <%= form_with model: [recipe, instruction], local: true do |form|%>
        <div class="field">
          <p class="control">
            <%= form.text_area :step, class: "input", placeholder: 'Instruction step'%>
          </p>
        </div>
        <div class="field is-grouped">
          <div class="control">
              <%= form.submit class: "button is-light" %>
          </div>
        </div>
      <% end %>
        <div class="control">
            <%= link_to 'Cancel', recipe_path(recipe), class: "button is-white" %>
        </div>
    </div>
  </div>
</div>
