<div class="container">
  <div class="column is-6 is-offset-3"><div class="box has-background-white-ter">
    <article class="media">
      <div class="media-content">
        <div class="content">
          <h6>Instructions</h6>
          <p>
            <ol>
              <% @recipe.instructions.each do |ins| %>
                <li><%= ins.step %>
                  <% if logged_in? && equal_with_current_user?(ins.recipe.user) %>
                    <%= link_to 'Edit', edit_recipe_instruction_path(ins.recipe, ins) %>
                    <%= link_to 'Delete', recipe_instruction_path(ins.recipe, ins),
                    method: :delete,
                    data: { confirm: 'Are you shure you want to delete this instruction step?'} %>
                  <% end %>
                </li>
              <% end %>
            </ol>
          </p>
          <% if logged_in? && equal_with_current_user?(@recipe.user) %>
            <footer class="card-footer">
              <div class="level-left">
                <div class="icon-margins">
                  <%= link_to new_recipe_instruction_path(@recipe) do %>
                  <i class="fas fa-plus" aria-hidden="true"></i>
                  <% end %>
                </div>
              </div>
            </footer>
          <% end %>
        <div>
      </div>
    </article>
  </div>
</div>

