<div class="column is-6 is-offset-5">
  <footer class="card-footer is-size-5">
    <div class="level-left">
      <div class="icon-margins">
        <%= link_to recipes_path do %>
        <i class="fas fa-arrow-left"></i>
        <% end %>
      </div>
      <% if logged_in? && equal_with_current_user?(@recipe.user) %>
        <div class="icon-margins">
          <%= link_to edit_recipe_path(@recipe), class:"delete_link" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        </div>
        <div class="icon-margins">
          <%= link_to recipe_path(@recipe),
          method: :delete,
          data: { confirm: 'Are you shure you want to delete this recipe?'} do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </footer>
</div>
