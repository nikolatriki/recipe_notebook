<div class="container">
  <div class="column is-6 is-offset-3"><div class="box has-background-white-ter">
    <article class="media">
      <div class="media-content">
        <div class="content">
          <p>
            <strong><%= recipe.title %></strong><br> <small>by@</small> <small>User's handle</small>
            <br>
            <%= recipe.description %>
          </p>

          <footer class="card-footer">
            <div class="level-left">
              <% if local_assigns[:show]%>
                  <div class="icon-margins">
                    <%= link_to recipes_path do %>
                    <i class="fas fa-arrow-left" aria-hidden="true"></i>
                    <% end %>
                  </div>
                <% else %>
                  <div class="icon-margins">
                    <%= link_to recipe_path(recipe) do %>
                    <i class="fas fa-eye" aria-hidden="true"></i>
                    <% end %>
                  </div>
              <% end %>
              <div class="icon-margins">
                <%= link_to edit_recipe_path(recipe) do %>
                <i class="fas fa-edit" aria-hidden="true"></i>
                <% end %>
              </div>
              <div class="icon-margins">
                <%= link_to recipe_path(recipe),
                method: :delete,
                data: { confirm: 'Are you shure you want to delete this recipe?'} do %>
                <i class="fas fa-trash" aria-hidden="true"></i>
                <% end %>
              </div>
            </div>
          </footer>
        </div>
      </div>
    </article>
  </div>
</div>

