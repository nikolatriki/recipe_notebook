  <div class="column is-6 is-offset-3"><div class="box has-background-white-ter">
    <article class="media">
      <div class="media-content">
        <div class="content">
          <p>
            <% unless local_assigns[:show] %>
            <strong><%= link_to recipe.title, recipe_path(recipe) %></strong>
            <% else %>
            <strong><%= recipe.title %></strong>
            <% end %>
            <br> <small>by@user</small> <small>User's handle</small>
            <br>
            <%= recipe.description %>
          </p>
        <div>
      </div>
    </article>
  </div>
</div>
